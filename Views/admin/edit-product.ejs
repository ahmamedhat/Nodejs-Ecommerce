<%- include ('../includes/header.ejs') %>
<body>
    <%- include ('../includes/navigation.ejs') %>
    <main>
	<div class="main__form--container">
        <form class="main__form" action="/admin/<%if(editing){%>edit-product<% }else{%>add-product<%}%>" method="POST">
            <div class="main__form--input">
                <label for="title">Title</label>
                <input type="text" name="title" value ="<% if(editing) {%><%= product.title %><% }%>">
            </div>
            <div class="main__form--input">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" value="<% if(editing) {%><%= product.imageUrl %><% }%>">
            </div>
            <div class="main__form--input">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(editing) {%><%= product.price %><% } %>">
            </div>
            <div class="main__form--input">
                <label for="description">Description</label>
                <input type="text" name="description" value="<% if(editing) {%><%= product.description %><% }%>">
            </div>
            
            <% if (editing) { %>
                <input type="hidden" name="productId" value="<%= product._id %>">
            <% } %>
	    <div class="btn-edit-container">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-edit"><% if(editing) {%>Update<% }else {%> Add<% } %></button>
	    </div>
        </form>
	</div>
    </main>
</body>
</html>