<%- include ('../includes/header.ejs') %>
    <body class="login__body">
        <%- include ('../includes/navigation.ejs') %>

        <main>
            <div class="login__container">
                <% if (errorMessage) { %>
                    <div class="popup-message popup-message--error">
                        <%= errorMessage %>
                    </div>
                <% } %>
                <div class="login__container--form">
                    <form action="/new-password" method="POST">
                        <div class="login__container--field reset-container">
                            <input class="form__field" type="password" placeholder="Password" name="password">
                            <label class="form__label reset__label" for="password"><b>Password</b></label>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="userId" value="<%= userId %>">
                        <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                        <button class="login__container--submit" type="submit">Update Password</button>
                    </form>
                </div>
            </div>
        </main>
    </body>
</html>